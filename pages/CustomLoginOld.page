<apex:page controller="CustomLoginController" showheader="false"  cache="false">
 <apex:form >

 <style type="text/css">
  .tablewrapper {
    height: 100%;
    margin: 0;
    padding: 0;
    width: 100%;
}


#login {
    margin-left: auto;
    margin-right: auto;
    max-width: 400px;
    padding: 10px;
    margin-top: 107px;
}
#login_wrapper {
    background-color: #e3e3e3;
    border: 10px solid #ababab;
    border-radius: 3px;   
    margin-left: auto;
    margin-right: auto;
    min-height: 360px;
    min-width: 340px;
    overflow: hidden;
}
#login {
    margin-left: auto;
    margin-right: auto;
    max-width: 475px;
    padding: 10px;
}

#left_side {
    float: none;
    margin-left: auto;
    margin-right: auto;
    width: 320px;
}

#logo_wrapper {
    line-height: 160px;
    margin: 30px auto 10px;
    max-height: 240px;
    overflow: hidden;
    text-align: center;
    width: 290px;
    border: 4px solid #626262;
    box-shadow: 10px 10px 7px #888888;

}
#loginwidget {
    margin-bottom: 10px;
    margin-left: auto;
    margin-right: auto;
}
.loginbox_container, .loginError
{
      margin-left: auto;
    margin-right: auto;
    width: 280px;
}

#idscale {
    width: 285px;
}

.loginbox_container {
    margin-bottom: 0;
    margin-top: 0;
}

.first {
    border-radius: 3px 3px 0 0;
    box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.2) inset;
}

.identity {
    background-color: #f9fafb;
    border-color: #ccc;
    border-style: solid;
    border-width: 1px;
    cursor: pointer;
    height: 28px;
    padding: 8px 0 8px 8px;
}

.zen-assistiveText {
    clip: rect(1px, 1px, 1px, 1px);
    height: 1px;
    overflow: hidden;
    position: absolute !important;
    width: 1px;
}   
.t {
    float: left;
}

.thumbnail {
    height: 28px;
    padding-right: 4px;
    width: 28px;
}

img {
    border: 0 none;
    vertical-align: middle;
}

.input {
    background-color: #f3f5f6;
    border: 0 solid #f3f5f6;
    color: #586064;
    font-size: 12px;
    margin-left: 0;
    margin-top: 0;
    width: 230px;
}

input {
    line-height: normal;
}
input {
    font-size: 100%;
    margin: 0;
    vertical-align: middle;
}   


#username, #password {
    width: 222px;
}
.identityinput {
    float: left;
    margin-top: 5px;
    width: 206px;
    background-color: #f9fafb;
    border-color: #f9fafb;
}
.identityinput:focus {
    background-color: #f9fafb;
    border-color: #f9fafb;
    outline: medium none;
  
}

.clrField {
    background-image: url("/img/ico_cancel_clear_sm.png");
    background-repeat: no-repeat;
    cursor: pointer;
    display: none;
    float: right;
    font-family: Arial;
    font-size: 10pt;
    height: 12px;
    margin-right: 3px;
    margin-top: 16px;
    opacity: 0.8;
    text-align: center;
    width: 12px;
}
.last {
    border-bottom: 1px solid #ccc;
    border-radius: 0 0 3px 3px;
}
#Login {
    margin-top: 15px;
    width: 280px;
}

.button, .button, .btnPrimary, .btnPrimary {
    background: rgba(0, 0, 0, 0) -moz-linear-gradient(center bottom , #2789c7 0%, #3f9fd9 100%) repeat scroll 0 0;
}


#forgot {
    margin-bottom: 15px;
    margin-top: 20px;
    text-align: center;
    
}


body button, body .x-btn, body .btn, body .btnDisabled, body .btnCancel, body .menuButton .menuButtonButton {
    -moz-border-bottom-colors: none;
    -moz-border-left-colors: none;
    -moz-border-right-colors: none;
    -moz-border-top-colors: none;
    background: #e8e8e9 url("/img/alohaSkin/btn_sprite.png") repeat-x scroll right top;
    border-color: #ccc;
    border-image: none;
    border-radius: 3px;
    border-style: solid;
    border-width: 1px;
    color: #333;
    font-size: 0.9em;
    font-weight: bold;
    margin: 1px;
    padding: 7px 69px !important;
    width:100%
}
.message .messageText {
    margin-left: 8px;
    color: red;

}
.message {

    background: transparent;
    width: 105%;
    margin-left: 1px;
    border: none;
}

input:focus { border:0 !important; }
</style>
<body bgcolor="#F7F7F7">
   <table class="tablewrapper"  cellspacing="0" cellpadding="0" border="0" > 
   <tbody>
      <tr valign="middle">
        <td>
         <div id="login">
            <div id="login_wrapper">
              <div id="left_side">
                 <div id="login_component">
                    
                           <div id="logo_wrapper">
                                 <!--<a href="http://www.salesforce.com"><img border="0" alt="Salesforce" src="/img/logo190.png" class="logo_salesforce" id="logo"/></a> -->
                                 <apex:image width="290" height="160"  id="phHeaderLogoImage" alt="" value="{!$Resource.MozillaLogo}" />
                           </div>
                           <br/>
                           <div id="loginwidget">
                              <div id="loginformarea" class="loginbox_container">
                                <div id="theloginform" style="display: inline;">
                                   <div class="loginbox_container">
                                     <div class="identity first"><label class="zen-assistiveText" >Username</label>
                                     <span class="t">
                                       <img id="loginthumb" class="thumbnail" width="28" height="28" title="Username" alt="Username" src="/img/user188.png"/>
                                     </span>
                                     <!--<input type="email"  id="username" name="username" class="input identityinput" value="" placeholder="Username"/> -->
                                      <apex:inputText value="{!username}" html-placeholder="Username" id="username" styleClass="input identityinput" required="true"   />
                                     </div>
                                     <div  class="loginbox_container">
                                       <div class="clrField" id="clrPw" >&nbsp;
                                       </div>
                                      <div class="identity last">
                                         <label class="zen-assistiveText" for="password">Password</label>
                                         <span class="t"><img width="28" height="28" title="Password" class="thumbnail" alt="Password" src="/img/lock188.png" /></span>
                                          <!--<input type="password" onkeyup="if(this.value != ''){document.getElementById('clrPw').style.display='block';}else{document.getElementById('clrPw').style.display='none';}" autocomplete="off" onkeypress="checkCaps(event)" name="pw" id="password" class="input identityinput" placeholder="Password"/> -->
                                          <apex:inputSecret styleClass="input identityinput" required="true" id="password" value="{!password}" html-placeholder="Password" />
                                      </div>
                                     </div>
                                   </div>
                                   <br/>
                                   <br/>
                                   <div class="loginbox_container">
                                      <apex:commandButton id="Login" styleClass="button" action="{!login}" value="Log In"/>
                                
                                    </div>
                                    <div id="forgot" class="loginbox_container">
                                        <apex:outputlink value="{!$Site.BaseUrl}/CustomForgotPassword">Forgot your password?</apex:outputlink>
                                    </div>
                                    <apex:pageMessage severity="error" summary="Login Failed.Please check Username or Password." rendered="{!isLoginFailed}"/>
                                </div>
                              
                              </div>
                           </div>
                       
                 </div>
              </div>
            </div>
         </div>
        </td>
      </tr>
    </tbody>
   </table>
</body>
</apex:form>
</apex:page>