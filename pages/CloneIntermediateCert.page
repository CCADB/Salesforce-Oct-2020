<apex:page standardController="Account" extensions="CreateIntermediateCertController"> 
    <apex:sectionHeader title="New Intermediate Certificate" subtitle="{!Account.Parent.Name} (Parent)"/>
    <apex:form id="frm">
        <apex:pageMessages />
        <apex:pageBlock title="User Confirmation" rendered="{!!showBackButton}">
            <apex:outputPanel rendered="{!(Account.Name == '<Fill in Cert Name>' || Account.X_509_Certificate_PEM__c == null)}">
                <apex:outputText value="{!if(Account.Name == '<Fill in Cert Name>', 'Parent certificate name should not be <Fill in Cert Name>. Please update certificate name and then clone intermediate cert.','Parent certificate is missing PEM Info. Please provide valid PEM Info and then clone intermediate cert.')}"/>
                <br/><br/><apex:commandButton value="Go Back" action="{!cancel}" reRender="frm" />
            </apex:outputPanel>
            <apex:outputPanel rendered="{!(Account.Name != '<Fill in Cert Name>' && Account.X_509_Certificate_PEM__c != null)}">
                <apex:outputText value="You are about to create a record for an intermediate certificate signed by the following certificate"/><br/><br/>
                Parent Name: <b><apex:outputText value="{!Account.Parent.Name}"/></b><br/>
                SHA-256 Fingerprint: <b><apex:outputText value="{!Account.Parent.SHA_256_Fingerprint__c}"/></b><br/><br/>
                <apex:outputText value="Click Continue to create the record, or click Go Back to return."/> <br/><br/>
                <apex:commandButton value="Continue"  action="{!cloneIntermediateCert}" reRender="frm"/> &nbsp;&nbsp;&nbsp;&nbsp;
                <apex:commandButton value="Go Back" action="{!cancel}" reRender="frm" />
            </apex:outputPanel>
        </apex:pageBlock>
        <div style="padding-left:20px;">
            <br/>
            <apex:commandButton action="{!cancel}" value="Go Back" rendered="{!showBackButton}" />
        </div>
    </apex:form>
