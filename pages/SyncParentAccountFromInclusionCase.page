<apex:page standardController="Case" extensions="SyncParentAccountFromInclusionCaseCtrl" showHeader="true"   sidebar="true" 
        cache="false" tabStyle="Case" standardStylesheets="true">

 <apex:sectionHeader title="" subtitle="Sync info from Case to CA Owner: {!ParentAccount.name}"/>
    <apex:pageBlock title="Fields To Be Synced" rendered="{!isRequestStatusIncludedOrComplete}" id="pBlock">
         <apex:pageBlockSection columns="2">
           <apex:outputText label=" " value="Sources"  style="color:red;font-weight:bold" />
           <apex:outputText label=" " value="Target" style="color:red;font-weight:bold" />
             
           <!--  
           <apex:outputText label="Link to Bugzilla Bug" value="{!CaseDetailsSo.Link_to_Bugzilla_Bug__c}" style="{!IF (CaseDetailsSo.Link_to_Bugzilla_Bug__c != ParentAccount.Approval_Bug__c,'color:blue','')}"/>
           <apex:outputText label="Approval Bug" value="{!ParentAccount.Approval_Bug__c}" style="{!IF (CaseDetailsSo.Link_to_Bugzilla_Bug__c != ParentAccount.Approval_Bug__c,'color:blue','')}"/>
           -->
           <apex:outputText label="Company Website" value="{!CaseDetailsSo.Company_Website__c}" style="{!IF (CaseDetailsSo.Company_Website__c != ParentAccount.Company_Website__c,'color:blue','')}"/>
           <apex:outputText label="Company Website" value="{!ParentAccount.Company_Website__c}" style="{!IF (CaseDetailsSo.Company_Website__c != ParentAccount.Company_Website__c,'color:blue','')}"/>            
             
           <apex:outputText label="CA Email Alias 1" value="{!CaseDetailsSo.CA_Email_Alias_1__c}" style="{!IF (CaseDetailsSo.CA_Email_Alias_1__c != ParentAccount.CA_Email_Alias_1__c,'color:blue','')}"/>
           <apex:outputText label="CA Email Alias 1" value="{!ParentAccount.CA_Email_Alias_1__c}" style="{!IF (CaseDetailsSo.CA_Email_Alias_1__c != ParentAccount.CA_Email_Alias_1__c,'color:blue','')}"/>
           
           <apex:outputText label="Street" value="{!CaseDetailsSo.Street__c}" style="{!IF (CaseDetailsSo.Street__c != ParentAccount.BillingStreet,'color:blue','')}"/>
           <apex:outputText label="Street" value="{!ParentAccount.BillingStreet}" style="{!IF (CaseDetailsSo.Street__c != ParentAccount.BillingStreet,'color:blue','')}"/>
           
           <apex:outputText label="City" value="{!CaseDetailsSo.City__c}" style="{!IF (CaseDetailsSo.City__c != ParentAccount.BillingCity,'color:blue','')}"/>
           <apex:outputText label="City" value="{!ParentAccount.BillingCity}" style="{!IF (CaseDetailsSo.City__c != ParentAccount.BillingCity,'color:blue','')}"/>
           
           <apex:outputText label="State" value="{!CaseDetailsSo.State__c}" style="{!IF (CaseDetailsSo.State__c != ParentAccount.BillingState,'color:blue','')}"/>
           <apex:outputText label="State" value="{!ParentAccount.BillingState}" style="{!IF (CaseDetailsSo.State__c != ParentAccount.BillingState,'color:blue','')}"/>
           
           <apex:outputText label="Postal Code" value="{!CaseDetailsSo.Zip_Postal_Code__c }" style="{!IF (CaseDetailsSo.Zip_Postal_Code__c  != ParentAccount.BillingPostalCode,'color:blue','')}"/>
           <apex:outputText label="Postal Code" value="{!ParentAccount.BillingPostalCode}" style="{!IF (CaseDetailsSo.Zip_Postal_Code__c != ParentAccount.BillingPostalCode,'color:blue','')}"/>
           
           <apex:outputText label="Country" value="{!CaseDetailsSo.Country__c}" style="{!IF (CaseDetailsSo.Country__c != ParentAccount.BillingCountry,'color:blue','')}"/>
           <apex:outputText label="Country" value="{!ParentAccount.BillingCountry}" style="{!IF (CaseDetailsSo.Country__c != ParentAccount.BillingCountry,'color:blue','')}"/>
             
           <apex:outputText label="Organizational Type" value="{!CaseDetailsSo.Organizational_Type__c}" style="{!IF (CaseDetailsSo.Organizational_Type__c != ParentAccount.Organizational_Type__c,'color:blue','')}"/>
           <apex:outputText label="Organizational Type" value="{!ParentAccount.Organizational_Type__c}" style="{!IF (CaseDetailsSo.Organizational_Type__c != ParentAccount.Organizational_Type__c,'color:blue','')}"/>
           
           <apex:outputText label="Geographic Focus" value="{!CaseDetailsSo.Geographic_Focus__c}" style="{!IF (CaseDetailsSo.Geographic_Focus__c != ParentAccount.Geographic_Focus__c,'color:blue','')}"/>
           <apex:outputText label="Geographic Focus" value="{!ParentAccount.Geographic_Focus__c}" style="{!IF (CaseDetailsSo.Geographic_Focus__c != ParentAccount.Geographic_Focus__c,'color:blue','')}"/>

           <apex:outputText label="Primary Market/Customer Base" value="{!CaseDetailsSo.Primary_Market_Customer_Base__c}" style="{!IF (CaseDetailsSo.Primary_Market_Customer_Base__c != ParentAccount.Primary_Market_Customer_Base__c,'color:blue','')}"/>
           <apex:outputText label="Primary Market/Customer Base" value="{!ParentAccount.Primary_Market_Customer_Base__c}" style="{!IF (CaseDetailsSo.Primary_Market_Customer_Base__c != ParentAccount.Primary_Market_Customer_Base__c,'color:blue','')}"/>            
           
           <apex:outputText label="Recognized CAA Domains" value="{!CaseDetailsSo.Recognized_CAA_Domains__c}" style="{!IF (CaseDetailsSo.Recognized_CAA_Domains__c != ParentAccount.Recognized_CAA_Domains__c,'color:blue','')}"/>
           <apex:outputText label="Recognized CAA Domains" value="{!ParentAccount.Recognized_CAA_Domains__c}" style="{!IF (CaseDetailsSo.Recognized_CAA_Domains__c != ParentAccount.Recognized_CAA_Domains__c,'color:blue','')}"/>
           
           <apex:outputText label="Problem Reporting Mechanism" value="{!CaseDetailsSo.Problem_Reporting_Mechanism__c}" style="{!IF (CaseDetailsSo.Problem_Reporting_Mechanism__c != ParentAccount.Problem_Reporting_Mechanism__c,'color:blue','')}"/>
           <apex:outputText label="Problem Reporting Mechanism" value="{!ParentAccount.Problem_Reporting_Mechanism__c}" style="{!IF (CaseDetailsSo.Problem_Reporting_Mechanism__c != ParentAccount.Problem_Reporting_Mechanism__c,'color:blue','')}"/>
           
           
        </apex:pageBlockSection>   

     </apex:pageBlock>
     <style>
     .btn{ width:50px;}
     </style>

     <apex:form id="theFrm">
       <apex:pageBlock title="User Confirmation" rendered="{!AND(!isRecordUpdated, !isUpdateCancelled,isRequestStatusIncludedOrComplete)}">
            <apex:outputText value="Do you want to update the fields on the Target CA Owner Account?"/> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    
            <apex:commandButton action="{!SyncAccount}" value="Yes" id="saveButton" reRender="theFrm, pBlock"/> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <apex:commandButton action="{!CancelSyncAccount}" value="No" id="cancelButton" reRender="theFrm"/>
        </apex:pageBlock>

    <apex:outputPanel id="recordUpdated">
       <apex:pageBlock title="Record Updated Successfully" rendered="{!AND(isRecordUpdated,!isUpdateCancelled,isRequestStatusIncludedOrComplete)}" >
          <apex:outputText value="Please click on the next button to continue."/> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <apex:commandButton action="{!redirectToSyncRootAccount}" value="Next" id="redirectToSyncRootButton"    /> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
       </apex:pageBlock>
    </apex:outputPanel> 
    
     <apex:outputPanel id="updateCancelled">
       <apex:pageBlock title="No Record Updated" rendered="{!AND(!isRecordUpdated,isUpdateCancelled,isRequestStatusIncludedOrComplete)}">
          <apex:outputText value="Please click on the 'Next' button to review the Root Cases."/> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <apex:commandButton action="{!redirectToSyncRootAccount}" value="Next" id="redirectToCaseButton"    /> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
       </apex:pageBlock>
     </apex:outputPanel> 
      
     <apex:outputPanel id="GoBackToCase">
       <apex:pageBlock title="Cannot Proceed To Sync" rendered="{!!isRequestStatusIncludedOrComplete}">
          <apex:outputText value="Case Request Status is not 'Included, Pending EV' or 'Complete'."/> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <apex:commandButton action="{!redirectToCase}" value="Back" id="redirectToCaseButton"    /> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
       </apex:pageBlock>
     </apex:outputPanel> 
     
     </apex:form>
</apex:page>